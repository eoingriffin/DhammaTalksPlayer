<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust system certificates for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Specific configuration for dhammatalks.org -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">dhammatalks.org</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>

